
import java.util.Locale;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {

		Locale.setDefault(Locale.US);

		Scanner sc = new Scanner(System.in);

		sc.next();
		int x = sc.nextInt();

		if (x == 1) {
			System.out.println("Total: R$ " + x * 4.00);

		} else if (x == 2) {
			System.out.println("Total: R$ " + x * 4.50);

		} else if (x == 3) {
			System.out.println("Total: R$ " + x * 5.00);
		}

		else if (x == 4) {
			System.out.println("Total: R$ " + x * 2.00);
		}

		else if (x == 5) {
			System.out.println("Total: R$ " + x * 1.50);
		}

		else {
			System.out.println(" Valor errado");
		}
		sc.close();

	}
}